<!-- views/dash.handlebars -->
<head>
    <link rel="stylesheet" href="/css/dash.css">
</head>
<body>
    <div id="dashboard">
        <h1 class="dash-title text-light">{{username}}'s Dashboard</h1>
        <div class="dash-container">
            {{!-- Display blog posts --}}
            {{#each posts}}
            <div class="post">
                <h2>{{this.title}}</h2>
                <p>{{this.content}}</p>
                <p>Posted by {{this.username}} on {{this.createdAt}}</p>
            </div>
            {{/each}}
        </div>
        {{!-- Create post button --}}
        <div class="text-center fixed-bottom" style="margin: 20px;">
            <button class="btn btn-outline-light">Create a new post</button>
        </div>
    </div>
</body>