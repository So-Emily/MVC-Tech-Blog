<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Tech Blog</title>

    
    {{!-- Custom CSS --}}
    <link rel="stylesheet" href="/css/home.css">
</head>
<body>
    <br><br>
    {{#if loggedIn}}
    <div class="text-light">
        <h1 class="welcome-title">Hello, {{username}}!</h1>
        <h1 class="home-title">Welcome To Your Tech Blog</h1>
    </div>
    {{else}}
    <h1 class="home-title">The Tech Blog</h1>
    {{/if}}
{{!-- homepage should display blog posts if there are any --}}
    {{#each posts}}
    <div class="post">
        <h2>{{this.title}}</h2>
        <p>{{this.content}}</p>
        <p>Posted by {{this.username}} on {{this.createdAt}}</p>
    </div>
    {{/each}}
</body>
</html>