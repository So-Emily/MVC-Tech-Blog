<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Tech Blog</title>
</head>
<body>
    <h1>Welcome to the Tech Blog</h1>
{{!-- homepage should display blog posts if there are any --}}
    {{#each posts}}
    <div class="post">
        <h2>{{this.title}}</h2>
        <p>{{this.content}}</p>
        <p>Posted by {{this.username}} on {{this.createdAt}}</p>
    </div>
    {{/each}}
</body>
</html>