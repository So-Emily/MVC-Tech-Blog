<head>
  <link rel="stylesheet" href="/css/style.css">
</head>

<div class="card">
  <div class="card-header">
    <h2 class="text-center">Login</h2>
  </div>
  <form id="login-form" class="card-body">
    <div>
      <label for="username-input-login" class="form-label text-center">Username</label>
      <input type="text" id="username-input-login" />
    </div>
    <div>
      <label for="password-input-login" class="form-label text-center">Password</label>
      <input type="password" id="password-input-login" />
    </div>
    <button type="submit" id="login-btn" class="btn log-btn">Login</button>
    <a type="button" href="/signup">Sign up instead!</a>
  </form>
</div>

<script src="/js/login.js"></script>